<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.lacrise"
    android:versionCode="0"
    android:versionName="0.1.1" android:installLocation="preferExternal">

    <uses-sdk android:minSdkVersion="10" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name">
        <activity
            android:name=".LaCrise"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.create.NewGame"
            android:label="@string/create_game" >
        </activity>
        <activity
            android:name=".activity.create.GameBoard"
            android:label="@string/board_game" >
        </activity>
        <activity
            android:name=".activity.create.AddPlayer"
            android:label="@string/menu_add_player" >
        </activity>
        <activity
            android:name=".activity.create.RenamePlayer"
            android:label="@string/rename_player" >
        </activity>
        <activity
            android:name=".activity.run.ScoreBoard"
            android:label="@string/score_board" >
        </activity>
        <activity
            android:name=".activity.run.ScoreChart"
            android:label="@string/score_chart" >
        </activity>
        <activity
            android:name=".activity.run.EnterTurnScore"
            android:label="@string/turn_score" >
        </activity>
        <activity
            android:name=".activity.run.TurnHistory"
            android:label="@string/turn_history" >
        </activity>
        <activity
            android:name=".activity.run.GameOptions"
            android:label="@string/game_options" >
        </activity>
        <activity
            android:name=".activity.run.Statistics"
            android:label="@string/statistics" >
        </activity>
    </application>

</manifest>